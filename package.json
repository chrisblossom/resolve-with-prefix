{
  "name": "resolve-with-prefix",
  "version": "1.0.3",
  "description": "Resolve modules with a predefined prefix.",
  "keywords": [
    "resolve",
    "prefix",
    "require",
    "resolve string",
    "require string",
    "string config",
    "string configuration",
    "config",
    "configuration"
  ],
  "license": "ISC",
  "repository": "chrisblossom/resolve-with-prefix",
  "homepage": "https://github.com/chrisblossom/resolve-with-prefix",
  "author": "Chris Blossom",
  "main": "build/resolve-with-prefix.js",
  "scripts": {
    "clean": "del ./build/*",
    "lint": "eslint --report-unused-disable-directives .",
    "lint.fix": "eslint --report-unused-disable-directives --fix .",
    "format": "prettier **/*.{js,md,json} --write",
    "test": "jest",
    "test.ci": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "npm run clean && concurrently \"npm run build.babel\" \"npm run build.flow\"",
    "build.babel": "NODE_ENV=production babel src -d build --ignore test.js,__sandbox__/ --source-maps",
    "build.flow": "NODE_ENV=production flow-copy-source --ignore \"**/*.test.js\" --ignore \"**/__sandbox__/**/*\" src build",
    "dev": "npm run clean && concurrently \"npm run dev.babel\" \"npm run dev.flow\"",
    "dev.babel": "NODE_ENV=development babel -w src/ -d build/ --ignore test.js,__sandbox__/ --source-maps",
    "dev.flow": "NODE_ENV=development flow-copy-source -w --ignore \"**/*.test.js\" --ignore \"**/__sandbox__/**/*\" src build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@chrisblossom/eslint-config": "^2.0.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.0",
    "del-cli": "^1.1.0",
    "eslint": "^4.19.0",
    "flow-bin": "^0.69.0",
    "flow-copy-source": "^1.3.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.2",
    "prettier": "^1.11.1"
  },
  "dependencies": {
    "resolve": "^1.6.0"
  }
}
